@model IEnumerable<EmployeeApp.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success">
        <strong>Scuccess</strong>@TempData["AlertMessage"]

    </div>
}

<h1>Index</h1>

<p>
    <a asp-action="Create"><i class="fa-solid fa-plus"></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tage)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Tid"><i class="fa-solid fa-pen-to-square"></i>Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Tid"><i class="fa-solid fa-circle-info"></i>Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Tid"><i class="fa-solid fa-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
